<h1 class="mt-4">Dashboard</h1>

<p class="lead mb-3">Dear<span class="Dashname">
        <%= user.name %>
    </span> , Welcome Into The Real BOOK FACE</p>
<a href="/logout" class="btn btn-secondary">Logout</a>

<head>
    <title>The Book Face's Feed</title>
    <link rel="stylesheet" href="/static/stylesheets/style.css" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Baloo+Bhai|Candal|Chewy&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css"
        integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
</head>

<body>
    <div class="todo-container">
        <h2>Feed Book</h2>
        <div class="todo">

            <form action="/dashbord" method="POST" class="todo-header">
                <textarea type="text" name="content"></textarea>
                <button type="submit">CLIC TO ADD YOUR POST</button>
            </form>
            <ul class="todo-list">

                <% postingMessage.forEach(details=> { %>
                    <li class="todo-list-item">
                        <div class="todo-list-item-name">

                            <span class="postname">
                                <%= details.name %>
                            </span>
                        </div>


                        <br>
                        <br>

                        <%= details.content %>
                            <a href="/edit/<%= details._id %>" class="edit">

                                <span class="fas fa-edit"></span>
                            </a>
                            <a href="/remove/<%= details._id %>" class="remove">
                                <span class="fas fa-times"></span>
                            </a>
                    </li>
                    <% }) %>
            </ul>
        </div>
    </div>
</body>

<style>
    body {
        font-family: 'Candal', sans-serif;
        padding: 40px;
        width: 45%;
    }
</style>